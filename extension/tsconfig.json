{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "types": [
            "node",
            "@girs/gio-2.0",
            "@girs/glib-2.0",
            "@girs/shell-13",
            "@girs/meta-13",
            "@girs/gnome-shell",
            "@girs/gobject-2.0"
        ],
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "rootDir": "./src",
        "outDir": "../dist/extension",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "removeComments": true,
        "strict": false,
        "skipLibCheck": true
    }
}
